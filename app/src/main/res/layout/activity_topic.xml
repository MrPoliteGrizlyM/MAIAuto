<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopicActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#4079af">

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"

            android:layout_alignParentTop="true"
            android:layout_marginEnd="17dp"
            android:background="@drawable/test_background"
            android:text="Следующий"
            android:textColor="@android:color/background_light"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp" />

        <Button
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:background="@drawable/test_background"
            android:text="Предыдущий"
            android:textColor="@android:color/background_light"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:fillViewport="false"
        android:orientation="vertical"
        android:padding="10dp">


        <!--<TextView-->
        <!--android:id="@+id/textQuestion"-->
        <!--android:layout_width="256dp"-->
        <!--android:layout_height="243dp"-->
        <!--android:layout_marginBottom="8dp"-->
        <!--android:layout_marginEnd="8dp"-->
        <!--android:layout_marginLeft="8dp"-->
        <!--android:layout_marginRight="8dp"-->
        <!--android:layout_marginStart="8dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:text="TextView"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_next"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/image_question"
                android:layout_width="match_parent"
                android:layout_height="292dp"
                app:srcCompat="@drawable/test"
                />

            <TextView
                android:id="@+id/text_view_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:freezesText="true"
                android:text="23. Перечень неисправностей и условий при которых запрещается эксплуатация транспортных средств. Перечень неисправностей и условий при которых запрещается эксплуатация транспортных средств."
                android:textColor="@android:color/black"
                android:textSize="21sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:freezesText="true"
                    android:text="Безопасность дорожного движения."
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radio_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:freezesText="true"
                    android:text="Перевозка грузов."
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radio_button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:freezesText="true"
                    android:text="Учебная езда."
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radio_button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:freezesText="true"
                    android:text="Учебная езда."
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radio_button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:freezesText="true"
                    android:text="Учебная езда."
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/hintText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:freezesText="true"
                    android:text="23. Перечень неисправностей и условий при которых запрещается эксплуатация транспортных средств. Перечень неисправностей"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/hintButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/test_background"
                    android:freezesText="true"
                    android:text="Подсказка" />

                <Button
                    android:id="@+id/button_confirm_next"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/start_background"
                    android:freezesText="true"
                    android:text="Button"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp" />

            </RadioGroup>

            <Button
                android:id="@+id/TEST"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/test_background"
                android:text="Button"
                android:visibility="invisible" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>